<%= link_to 'New Story', new_story_path, class: 'btn btn-primary' %>

<section class="mt-4">
  <% @stories.each do |story| %>
    <%= link_to(story, class: 'list-group-item list-group-item-action d-flex gap-3 py-3') do %>
      <img src="https://cdn4.iconfinder.com/data/icons/gadgets-3/130/_Lego-512.png" alt="twbs" class="rounded-circle flex-shrink-0" width="32" height="32">
      <div class="d-flex gap-2 w-100 justify-content-between">
        <div>
          <h6 class="mb-0"><%= story.title %></h6>
          <p class="mb-0 opacity-75"><%= strip_tags story.body.truncate 80 %></p>
        </div>
        <small class="opacity-50 text-nowrap"><%= story.user.name %></small>
      </div>
    <% end %>
  <% end %>
</section>

<section class="mt-3">
  <%= link_to_next_page @stories, 'antigas', class: 'btn btn-outline-primary' %>
  <%= link_to_previous_page @stories, 'novas', class: 'btn btn-outline-secondary' %>
</section>
